<div class="container h-100">
    <div class="row ">
        <div class="col-3"></div>
        <div class="col-6">
            <form action="http://localhost:8000/registration/" method="POST">
                <div class="form-group">
                    <label for="inputEmail"></label>
                    <input type="email" class="form-control" name="email" id="inputEmail" aria-describedby="emailHelp"
                        placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="inputPassw1"></label>
                    <input type="password" class="form-control" name="password" id="inputPassw1"
                        placeholder="Введите пароль"
                        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required>
                </div>
                <div class="form-group">
                    <label for="inputPassw2"></label>
                    <input type="password" class="form-control" name="password" id="inputPassw2"
                        placeholder="Введите пароль ещё раз"
                        pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" required>
                        <small class="form-text text-muted"><span id="spnPasswHelp"><%= passMessage %></span></small>
                </div>
                <button type="submit" class="btn btn-primary" id="btn1">Регистрация</button>
                <button type="reset" class="btn btn-secondary">Очистить</button>
            </form>
        </div>
        <div class="col-3"></div>
    </div>